        tools:layout_editor_absoluteX="164dp" />

    <TextView
        android:id="@+id/label_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Numero de Telefono"
